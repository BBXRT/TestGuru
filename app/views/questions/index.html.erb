<h1>Вопросы:</h1>

<table>

  <% Question.all_by_test_id(params[:test_id].to_i).each do |question| %>
    <tr>
      <td><%= question.body %></td>

      <td><%= button_to "Удалить", question_path(question), method: :delete %></td>

    </tr>
  <% end %>

</table>

