<%= form_with model: @user, local: true do |form| %>

  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </p>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </p>

  <p>
    <%= form.label :password_confiramtion %>
    <%= form.password_field :password_confiramtion, id: :user_password_confirmation %>
  </p>

  <p><%= form.submit %></p>

<% end %>
