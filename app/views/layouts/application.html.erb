<!DOCTYPE html>
<html>
<head>
  <title>TestGuru</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
</head>

<body>

<div class="menu">

  <div class="site_title"><b><%= link_to 'GURU', root_path %></b></div>

  <div class="site_links">
    <% if logged_in? %>
      <span class="nav user">Добро пожаловать, <b><%= current_user.name %></b>!</span>
      <span><%= link_to 'Выйти', logout_path, method: :get %></span>
    <% elsif %>
      <span><%= link_to 'Регистрация', signup_path %></span>
      <span><%= link_to 'Вход', login_path %></span>
    <% end %>
  </div>

  <div class="clearfix"></div>

</div>

<%= yield %>

<%= render 'shared/footer' %>
</body>
</html>
